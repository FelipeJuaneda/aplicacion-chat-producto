<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <script src="/socket.io/socket.io.js"></script>
    <script src="main.js"></script>
    <title>Productos y chat</title>
  </head>
  <body>

    <div>
      <h2>Ingrese un nuevo producto</h2>

      <form onsubmit="return addProduct(this)">
        <label for="title">Producto</label>
        <input type="text" name="title" id="title" />

        <label for="price">Precio</label>
        <input type="number" name="price" id="price" />

        <label>URL Imagen</label>
        <input type="text" name="thumbnail" id="thumbnail" />

        <button class="btn btn-info" type="submit">Agregar producto</button>
      </form>
    </div>

    <a href="/productos">
      <button>Ver todos los productos</button>
    </a> 

    <div id="divProductos" class="d-flex flex-wrap gap-3">

    </div>

    <div>
      <form onsubmit="return addMessage(this)">
        <div id="messages"></div>
        <input type="email" id="username" placeholder="Aca tu email" />
        <input type="text" id="text" placeholder="Escribe algo..." />
        <input type="submit" value="Enviar" />
      </form>
    </div>

  </body>
</html>